{
  "name": "laravel-prod-mcp",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "A production-safe MCP server (stdio) for debugging Laravel apps via a hardened remote diag runner over SSH.",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint .",
    "format": "prettier -w ."
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.0",
    "dotenv": "^16.4.5",
    "zod": "^3.25.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.0",
    "eslint": "^9.8.0",
    "prettier": "^3.3.3",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3"
  }
}
