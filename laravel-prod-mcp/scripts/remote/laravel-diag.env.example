# /etc/laravel-diag.env
# NOTE: This file should be readable ONLY by root (or a tightly scoped admin group).
# The diag runner itself can run without reading secrets; we use it for paths and policy flags.

# REQUIRED: absolute path to your Laravel app directory (where artisan lives)
LARAVEL_DIAG_APP_DIR=/var/www/myapp/current

# Optional: log directory (default: $APP_DIR/storage/logs)
# LARAVEL_DIAG_LOG_DIR=/var/www/myapp/current/storage/logs

# Optional: health endpoint URL (must be loopback)
LARAVEL_DIAG_HEALTH_URL=http://127.0.0.1/up

# Optional: php binary and artisan path
# LARAVEL_DIAG_PHP_BIN=/usr/bin/php
# LARAVEL_DIAG_ARTISAN=/var/www/myapp/current/artisan

# Safety
LARAVEL_DIAG_TIMEOUT_SEC=25
LARAVEL_DIAG_MAX_OUTPUT_CHARS=200000

# Break-glass (default 0)
LARAVEL_DIAG_ENABLE_MUTATIONS=0
